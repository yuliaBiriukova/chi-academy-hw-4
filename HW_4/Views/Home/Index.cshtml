@model HomeViewModel

<h1 class="mt-5">I am ASP.NET developer</h1>
<p class="mt-3">The world's first social network bringing together ASP.NET developers</p>
<p>Click to <a asp-controller="Registration" asp-action="Register">register</a></p>

@{
    if (@Model.amount > 0)
    {
        <h3 class="mt-5">@Model.amount developers are already part of the community!</h3>
        <a class="mt-3" href="/community">View registered developers</a>
    }
    else
    {
        <h3 class="mt-5">Be the first one to register!</h3>
    }
}